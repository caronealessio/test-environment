<mvc:View controllerName="testenvironment.controller.menu.Menu"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:l="sap.ui.layout">
  <f:DynamicPage showFooter="true">
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="{i18n>titleMenu}" />
        </f:heading>
      </f:DynamicPageTitle>
    </f:title>

    <f:content>
      <Panel backgroundDesign="Solid">
        <l:Grid >
          <HBox direction="Column">
            <Label text="{i18n>labelDescription}"
              required="true"/>
            <Input value="{Menu>/description}"/>
            <layoutData>
              <l:GridData span="XL4 L6 M12 S12"/>
            </layoutData>
          </HBox>
          <HBox direction="Column">
            <Label text="{i18n>labelKey}"
              required="true"/>
            <Input value="{Menu>/key}"/>
            <layoutData>
              <l:GridData span="XL4 L6 M12 S12"
                linebreak="true"/>
            </layoutData>
          </HBox>
          <HBox direction="Column">
            <Label text="{i18n>labelIcon}"/>
            <Input value="{Menu>/icon}"
              valueHelpRequest="onSelectIconOpen"
              showValueHelp="true" />
            <layoutData>
              <l:GridData span="XL4 L6 M12 S12"
                linebreak="true"/>
            </layoutData>
          </HBox>
        </l:Grid>
      </Panel>
    </f:content>

    <f:footer>
      <OverflowToolbar >
        <Button text="{i18n>btnBack}"
          press="onNavBack"
          type="Back"/>
        <ToolbarSpacer />
        <Button text="{i18n>btnSave}"
          press="onSave"
          type="Emphasized"/>
      </OverflowToolbar>
    </f:footer>
  </f:DynamicPage>
</mvc:View>