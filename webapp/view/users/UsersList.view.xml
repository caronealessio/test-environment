<mvc:View controllerName="testenvironment.controller.users.UsersList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f">
  <f:DynamicPage>
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="{i18n>titleUsers}" />
        </f:heading>
      </f:DynamicPageTitle>
    </f:title>
    <f:content>
      <VBox>
        <Panel>
          <OverflowToolbar style="Clear">
            <ToolbarSpacer />
            <Button text="{i18n>btnNew}"
              press="onCreatePress"
              type="Emphasized"/>
          </OverflowToolbar>
        </Panel>
        <Panel class="sapUiTinyMarginTop">
          <VBox id="tableUserContainer"/>
        </Panel>
      </VBox>
    </f:content>
  </f:DynamicPage>
</mvc:View>