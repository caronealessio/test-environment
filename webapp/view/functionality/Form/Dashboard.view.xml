<mvc:View controllerName="testenvironment.controller.functionality.Form.Dashboard"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.f"
  xmlns:my="testenvironment.controls"
  xmlns:l="sap.ui.layout">
  <f:DynamicPage showFooter="true">
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="{i18n>labelForm}" />
        </f:heading>
      </f:DynamicPageTitle>
    </f:title>
    <f:content>
      <VBox>
        <Panel>
          <headerToolbar>
            <OverflowToolbar>
              <Title text="{i18n>labelCurrency}" />
            </OverflowToolbar>
          </headerToolbar>
          <l:Grid>
            <my:Currency value="{
                parts: ['Form>/Currency', 'EUR'],
                type: 'sap.ui.model.type.Currency',
                formatOptions: {
                  showMeasure: false
                }
              }"
              label="Custom"
              maxIntegerDigits="5"
              maxDecimalDigits="2"
              enableNull="true">
              <my:layoutData>
                <l:GridData span="XL3 L4 M6" />
              </my:layoutData>
            </my:Currency>
            <VBox>
              <Label text="Standard" />
              <Input value="{
                parts: ['Form>/Currency', 'EUR'],
                type: 'sap.ui.model.type.Currency',
                formatOptions: {
                  showMeasure: false
                }
              }" />
              <layoutData>
                <l:GridData span="XL3 L4 M6" />
              </layoutData>
            </VBox>
          </l:Grid>
        </Panel>
        <Panel>
          <headerToolbar>
            <OverflowToolbar>
              <Title text="{i18n>labelInput}" />
            </OverflowToolbar>
          </headerToolbar>
          <l:Grid>
            <my:Input value="{Form>/Input}"
              label="Custom">
              <my:layoutData>
                <l:GridData span="XL3 L4 M6" />
              </my:layoutData>
            </my:Input>
            <VBox>
              <Label text="Standard" />
              <Input value="{Form>/Input}" />
              <layoutData>
                <l:GridData span="XL3 L4 M6" />
              </layoutData>
            </VBox>
          </l:Grid>
        </Panel>
      </VBox>
    </f:content>
    <f:footer>
      <OverflowToolbar>
        <Button type="Back"
          text="{i18n>btnBack}"
          press="onBack" />
        <ToolbarSpacer />
      </OverflowToolbar>
    </f:footer>
  </f:DynamicPage>
</mvc:View>