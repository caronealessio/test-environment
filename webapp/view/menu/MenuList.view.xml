<mvc:View controllerName="testenvironment.controller.menu.MenuList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:ui="sap.ui.table"
  xmlns:c="sap.ui.core"
  xmlns:rowmodes="sap.ui.table.rowmodes"
  xmlns:l="sap.ui.layout"
  xmlns:dnd="sap.ui.core.dnd"
  xmlns:my="testenvironment.controls">
  <f:DynamicPage showFooter="true">
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="{i18n>titleMenuManagement}" />
        </f:heading>
      </f:DynamicPageTitle>
    </f:title>

    <f:content>
      <VBox>
        <Panel>
          <l:Grid>
            <SearchField change="onSearchFieldChange">
              <layoutData>
                <l:GridData span="XL4 L5 M6 S12"/>
              </layoutData>
            </SearchField>
          </l:Grid>
          <ui:Table id="menuTable"
            rows="{Menu>/data}"
            selectionMode="None">
            <ui:rowMode>
              <rowmodes:Fixed rowCount="10"/>
            </ui:rowMode>
            <ui:extension>
              <OverflowToolbar style="Clear">
                <ToolbarSpacer />
                <Button icon="sap-icon://add"
                  text="{i18n>btnCreate}"
                  press="onCreate"/>
              </OverflowToolbar>
            </ui:extension>
            <ui:columns>
              <ui:Column width="3rem">
                <Label text="{i18n>labelId}"/>
                <ui:template>
                  <Text text="{Menu>id}"/>
                </ui:template>
              </ui:Column>
              <ui:Column>
                <Label text="{i18n>labelDescription}"/>
                <ui:template>
                  <Text text="{Menu>description}"/>
                </ui:template>
              </ui:Column>
              <ui:Column>
                <Label text="{i18n>labelTarget}"/>
                <ui:template>
                  <Text text="{Menu>target}"/>
                </ui:template>
              </ui:Column>
              <ui:Column width="4rem"
                hAlign="Center">
                <Label text="{i18n>labelIcon}"/>
                <ui:template>
                  <c:Icon src="{Menu>icon}"/>
                </ui:template>
              </ui:Column>
              <ui:Column width="5rem"
                hAlign="Center">
                <Label text="{i18n>labelVisible}"/>
                <ui:template>
                  <Switch state="{= ${Menu>isVisible} === 1 ? true : false}"
                    type="AcceptReject"
                    change="onVisibleChange"/>
                </ui:template>
              </ui:Column>
              <ui:Column width="3.5rem"
                hAlign="Center">
                <Label  />
                <ui:template>
                  <Button icon="sap-icon://edit"
                    press="onEdit"
                    type="Transparent" />
                </ui:template>
              </ui:Column>
              <ui:Column width="3.5rem"
                hAlign="Center">
                <Label  />
                <ui:template>
                  <Button icon="sap-icon://delete"
                    press="onDelete"
                    type="Transparent" />
                </ui:template>
              </ui:Column>
            </ui:columns>
            <ui:footer>
              <OverflowToolbar style="Clear">
                <ToolbarSpacer />
                <my:table.Paginator id="tblPaginatorMenu"
                  top="{Menu>/top}"
                  skip="{Menu>/skip}"
                  count="{Menu>/total}"
                  press="onPaginatorChange">
                </my:table.Paginator>
              </OverflowToolbar>
            </ui:footer>
          </ui:Table>
        </Panel>
        <Panel class="sapUiTinyMarginTop">
          <ScrollContainer height="40vh"
            vertical="true">
            <Tree id="menuTree"
              items="{MenuTree>/}">
              <dragDropConfig>
                <dnd:DragDropInfo sourceAggregation="items"
                  targetAggregation="items"
                  drop="onDrop"
                  dropPosition="Between" />
              </dragDropConfig>
              <StandardTreeItem title="{MenuTree>description}"
                icon="{MenuTree>icon}"/>
            </Tree>
          </ScrollContainer>
        </Panel>
      </VBox>
    </f:content>
  </f:DynamicPage>
</mvc:View>