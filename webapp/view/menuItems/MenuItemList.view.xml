<mvc:View controllerName="testenvironment.controller.menuItems.MenuItemList"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.f"
  xmlns:ui="sap.ui.table"
  xmlns:c="sap.ui.core">
  <f:DynamicPage showFooter="true">
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="{i18n>titleMenuManagement}" />
        </f:heading>
      </f:DynamicPageTitle>
    </f:title>

    <f:content>
      <ui:Table id="menuItemsTable"
        rows="{MenuItems>/}"
        rowSelectionChange="onSelectionChange">
        <ui:extension>
          <OverflowToolbar style="Clear">
            <ToolbarSpacer />
            <Button icon="sap-icon://add"
              text="{i18n>btnCreate}"
              press="onCreate"/>
            <Button id="editButton"
              icon="sap-icon://edit"
              text="{i18n>btnEdit}"
              press="onEdit"
              enabled="false"/>
            <Button id="deleteButton"
              icon="sap-icon://delete"
              text="{i18n>btnDelete}"
              press="onDelete"
              type="Attention"
              enabled="false"/>
          </OverflowToolbar>
        </ui:extension>
        <ui:columns>
          <ui:Column width="3rem">
            <Label text="{i18n>labelId}"/>
            <ui:template>
              <Text text="{MenuItems>id}"/>
            </ui:template>
          </ui:Column>
          <ui:Column>
            <Label text="{i18n>labelDescription}"/>
            <ui:template>
              <Text text="{MenuItems>description}"/>
            </ui:template>
          </ui:Column>
          <ui:Column>
            <Label text="{i18n>labelKey}"/>
            <ui:template>
              <Text text="{MenuItems>key}"/>
            </ui:template>
          </ui:Column>
          <ui:Column width="4rem">
            <Label text="{i18n>labelIcon}"/>
            <ui:template>
              <c:Icon src="{MenuItems>icon}"/>
            </ui:template>
          </ui:Column>
          <ui:Column width="4rem">
            <Label text="{i18n>labelVisible}"/>
            <ui:template>
              <Switch state="{= ${MenuItems>isVisible} === 1 ? true : false}"
                type="AcceptReject"
                change="onVisibleChange"/>
            </ui:template>
          </ui:Column>
        </ui:columns>
      </ui:Table>
    </f:content>
  </f:DynamicPage>
</mvc:View>