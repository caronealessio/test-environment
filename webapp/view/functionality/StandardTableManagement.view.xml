<mvc:View controllerName="testenvironment.controller.functionality.StandardTableManagement"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:f="sap.f"
  xmlns:ui="sap.ui.table"
  xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
  xmlns:sap.ui.fl="sap.ui.fl">
  <f:DynamicPage showFooter="true">
    <f:title>
      <f:DynamicPageTitle>
        <f:heading>
          <Title text="{i18n>labelStandardTableManagement}" />
        </f:heading>
      </f:DynamicPageTitle>
    </f:title>
    <f:content>
      <ui:Table id="tblDefault"
        rows="{DefaultTable>/}"
        sap.ui.fl:flexibility="sap/m/flexibility/EngineFlex"
        sort="onSort">
        <ui:extension>
          <OverflowToolbar>
            <ToolbarSpacer />
            <Button icon="sap-icon://action-settings"
              press="onTableSettings"
              app:idTable="tblDefault" />
          </OverflowToolbar>
        </ui:extension>
        <ui:columns>
          <ui:Column id="defaultTable_clnId"
            autoResizable="true"
            filterProperty="Id"
            sortProperty="Id">
            <Label text="{i18n>labelId}" />
            <ui:template>
              <Text text="{DefaultTable>Id}" />
            </ui:template>
          </ui:Column>
          <ui:Column id="defaultTable_clnName"
            autoResizable="true"
            filterProperty="Name"
            sortProperty="Name">
            <Label text="{i18n>labelName}" />
            <ui:template>
              <Text text="{DefaultTable>Name}" />
            </ui:template>
          </ui:Column>
          <ui:Column id="defaultTable_clnSurname"
            autoResizable="true"
            filterProperty="Surname"
            sortProperty="Surname">
            <Label text="{i18n>labelSurname}" />
            <ui:template>
              <Text text="{DefaultTable>Surname}" />
            </ui:template>
          </ui:Column>
          <ui:Column id="defaultTable_clnBirthDate"
            autoResizable="true"
            sortProperty="BirthDate">
            <Label text="{i18n>labelBirthDate}" />
            <ui:template>
              <Text text="{
                path: 'DefaultTable>BirthDate',
                type: 'sap.ui.model.type.Date',
                formatOptions: {
                  pattern: 'dd.MM.yyyy'
                }
              }" />
            </ui:template>
          </ui:Column>
          <ui:Column id="defaultTable_clnCity"
            autoResizable="true"
            filterProperty="City"
            sortProperty="City">
            <Label text="{i18n>labelCity}" />
            <ui:template>
              <Text text="{DefaultTable>City}" />
            </ui:template>
          </ui:Column>
        </ui:columns>
      </ui:Table>
    </f:content>
    <f:footer>
      <OverflowToolbar>
        <Button type="Back"
          text="{i18n>btnBack}"
          press="onBack" />
        <ToolbarSpacer />
      </OverflowToolbar>
    </f:footer>
  </f:DynamicPage>
</mvc:View>